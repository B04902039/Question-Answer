#:kivy 1.10.0

#:include kv/chinese.kv

<QuestionScreen>:
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            id: leftLayout
            size_hint: (.2, 1)
            padding: 10
            spacing: 10
            orientation: 'vertical'
            ChineseLabel:
                ## the location label
                canvas.before:
                    Color: 
                        ## red orange
                        rgba: .75, .25, .1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint: (1, .4)
                font_size: 24
                text: root.loc
                text_size: self.width, None
                height: self.texture_size[1]
            Label:
                id: timer
                size_hint: (1, .2)
                text: str(round(root.limit, 1))
                font_size: 32
        BoxLayout:
            canvas:
                Color: 
                    rgba: 0, 0, 0, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: (.8, 1)
            padding: 10
            spacing: 10
            orientation: 'vertical'
            ChineseLabel:
                ## the question
                size_hint: (1, 3)
                text: root.Qs
                font_size: 24
                text_size: self.width, None
                height: self.texture_size[1]
            BoxLayout:
                orientation: 'horizontal'
                padding: 5
                spacing: 5
                ChineseButton:
                    text: root.c1
                    on_release:
                        root.callback(0)
                ChineseButton:
                    text: root.c2
                    on_release:
                        root.callback(1)
            BoxLayout:
                orientation: 'horizontal'
                padding: 5
                spacing: 5
                ChineseButton:
                    text: root.c3
                    on_release:
                        root.callback(2)
                ChineseButton:
                    text: root.c4
                    on_release:
                        root.callback(3)
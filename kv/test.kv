            size_hint: (1, .8)
            cols: 3
            spacing: 5
            ChineseLabel:
                canvas.before:
                    Color:
                        rgba: root.background_color[0]
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: '第1組:\n' + str(root.score1) + '分'
            ChineseLabel:
                canvas.before:
                    Color:
                        rgba: root.background_color[1]
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: '第2組:\n'+ str(root.score2) +'分'
            ChineseLabel:
                canvas.before:
                    Color:
                        rgba: root.background_color[2]
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: '第3組:\n'+ str(root.score3) +'分'
            ChineseLabel:
                canvas.before:
                    Color:
                        rgba: root.background_color[3]
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: '第4組:\n'+ str(root.score4) +'分'
            ChineseLabel:
                canvas.before:
                    Color:
                        rgba: root.background_color[4]
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: '第5組:\n'+ str(root.score5) +'分'
            ChineseLabel:
                canvas.before:
                    Color:
                        rgba: root.background_color[5]
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: '第6組:\n'+ str(root.score6) +'分'
        ChineseButton:
            size_hint: (1, .2)
            background_color: 0.760, 0.760, 0.760, 1
            text: '回地圖繼續'
            on_release:
                root.callback()

<ChanceScreen>:
    BoxLayout:
        id: main_box
        orientation: 'vertical'
        spacing: 30
        padding: 50
        canvas.before:
            Color:
                rgba: 0.988, 0.988, 0.988, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ChineseLabel:
            size_hint: (1, .2)
            text: '第'+str(root.currentPlayer+1)+'組獲得機會卡:'
        ChineseLabel:
            size_hint: (1, .65)
            text: root.description
        ChineseButton:
            id: chance_back_btn
            size_hint: (1, .15)
            text: root.btn_text
            background_color: 1, 0.901, 0.6, 1
            on_release:
                root.callback()
    
<ChanceChooseTeamScreen>:
    BoxLayout:
        id: main_box
        orientation: 'vertical'
        spacing: 30
        padding: 50
        canvas.before:
            Color:
                rgba: 0.988, 0.988, 0.988, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ChineseLabel:
            size_hint: (1, .2)
            text: '第'+str(root.currentPlayer+1)+'組的機會卡:'
        ChineseLabel:
            size_hint: (1, .65)
            text: root.description + '\n請選擇組別'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, .15)
            spacing: 5
            ChineseButton:
                text: '第1組'
                background_color: 1, 0.901, 0.6, 1
                on_release: root.choose_team(0)
            ChineseButton:
                text: '第2組'
                background_color: 1, 0.901, 0.6, 1
                on_release: root.choose_team(1)
            ChineseButton:
                text: '第3組'
                background_color: 1, 0.901, 0.6, 1
                on_release: root.choose_team(2)
            ChineseButton:
                text: '第4組'
                background_color: 1, 0.901, 0.6, 1
                on_release: root.choose_team(3)
            ChineseButton:
                text: '第5組'
                background_color: 1, 0.901, 0.6, 1
                on_release: root.choose_team(4)
            ChineseButton:
                text: '第6組'
                background_color: 1, 0.901, 0.6, 1
                on_release: root.choose_team(5)